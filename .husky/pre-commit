#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run TypeScript type checking
echo "ğŸ” Running TypeScript type checking..."
npx tsc --noEmit || { echo "âŒ TypeScript check failed. Please fix the errors before committing."; exit 1; }

# Run ESLint on staged files
echo "ğŸ” Running ESLint on staged files..."
npx lint-staged || { echo "âŒ ESLint check failed. Please fix the errors before committing."; exit 1; }

# Run tests related to changed files
echo "ğŸ§ª Running tests related to changed files..."
npx jest --bail --findRelatedTests $(git diff --cached --name-only -- '*.ts' '*.tsx' | grep -v '^__tests__/') || { echo "âŒ Tests failed. Please fix the failing tests before committing."; exit 1; }

echo "âœ… Pre-commit checks passed!"
